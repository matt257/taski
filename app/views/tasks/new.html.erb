<html>
<body>
<div id="mainContent" class="main-content">

<h1>new task form</h1>

<%= form_with model: @task, local: true do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :priority %><br>
    <%= form.number_field :priority %>
  </div>

  <div>
    <%= form.label :tube_number %><br>
    <%= form.number_field :tube_number %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

    </div>

<ul id="task-list">
  <% @tasks&.each do |task| %>
    <li><%= task.name %></li>
  <% end %>
</ul>

</body>
</html>
